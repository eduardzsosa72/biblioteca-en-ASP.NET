@{
    ViewData["Title"] = "Registrar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 mt-5">
            <div class="card-body">
                <h4 class="text-center mb-4">Registrar Perfil</h4>
                <form action="/Account/RegistrarPerfil" method="post">
                    <div class="mb-3">
                        <label>Nombre</label>
                        <input type="text" name="nombre" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Apellido</label>
                        <input type="text" name="apellido" class="form-control" required />
                    </div>
                    <input type="hidden" name="email" value="@ViewBag.Email" />
                    <input type="hidden" name="password" value="@ViewBag.Password" />

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <button type="submit" class="btn btn-primary w-100">Registrar y Entrar</button>
                </form>
            </div>
        </div>
    </div>
</div>
