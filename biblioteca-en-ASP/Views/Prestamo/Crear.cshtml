@{
    ViewBag.Title = "Registrar Préstamo";
}

<h2>Registrar Préstamo</h2>

<form method="post" action="@Url.Action("Crear", "Prestamo")">
    <div class="mb-3">
        <label class="form-label">Selecciona un libro:</label>
        <select name="libroId" class="form-control" required>
            <option value="">-- Selecciona --</option>
            @foreach (var libro in ViewBag.Libros)
            {
                <option value="@libro.Id">@libro.Titulo</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Registrar</button>
</form>
