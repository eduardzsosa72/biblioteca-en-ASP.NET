@model IEnumerable<biblioteca_en_ASP_NET.Models.Prestamo>

<h2>Préstamos Registrados</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Libro</th>
            <th>Usuario</th>
            <th>Fecha Préstamo</th>
            <th>Fecha Devolución</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Libro?.Titulo</td>
                <td>@p.Usuario?.Nombre</td>
                <td>@p.FechaPrestamo.ToShortDateString()</td>
                <td>@p.FechaDevolucion.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Crear", "Prestamo")" class="btn btn-primary mt-3">Nuevo Préstamo</a>
