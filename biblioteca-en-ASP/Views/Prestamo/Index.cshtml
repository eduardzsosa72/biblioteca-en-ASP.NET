@model IEnumerable<biblioteca_en_ASP_NET.Models.Prestamo>

<h2>Préstamos Registrados</h2>

<a href="/Prestamo/Crear">Registrar nuevo préstamo</a>

<table border="1" cellpadding="5">
    <tr>
        <th>ID</th>
        <th>Usuario</th>
        <th>ID Libro</th>
        <th>Fecha Préstamo</th>
        <th>Devolución Esperada</th>
        <th>Devolución Real</th>
        <th>Acción</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.UsuarioCorreo</td>
            <td>@p.LibroId</td>
            <td>@p.FechaPrestamo</td>
            <td>@p.FechaDevolucionEsperada</td>
            <td>@(p.FechaDevolucionReal?.ToString() ?? "Pendiente")</td>
            <td>
                @if (p.FechaDevolucionReal == null)
                {
                    <a href="/Prestamo/Devolver/@p.Id">Devolver</a>
                }
            </td>
        </tr>
    }
</table>
