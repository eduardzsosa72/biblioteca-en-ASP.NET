<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Biblioteca</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#">Biblioteca</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Libro">Libros</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Prestamo">Préstamos</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Logout">Cerrar sesión</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container py-4">
        @RenderBody()
    </main>
    <footer class="text-center bg-light py-3">
        <small>&copy; 2025 Biblioteca Universitaria</small>
    </footer>
</body>
</html>
